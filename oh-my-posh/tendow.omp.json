{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "background": "#000000",
          "foreground": "#ffffff",
          "style": "powerline",
          "template": " {{ if .WSL }}WSL {{ end }}{{.Icon}} ",
          "type": "os"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " \uf0e7 ",
          "foreground": "#000000",
          "powerline_symbol": "\ue0b0",
          "background": "#fffb00",
          "type": "root",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " {{ .UserName }}{{ if .SSHSession }}@{{ .HostName }} \uDB80\uDF18{{ end }} ",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "background": "#0b1215",
          "type": "session",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none",
            "style": "full"
          },
          "template": " {{ .Path }} ",
          "foreground": "#000000",
          "powerline_symbol": "\ue0b0",
          "background": "#3fb8f4",
          "type": "path",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none",
            "fetch_upstream_icon": true
          },
          "template": " {{ .UpstreamIcon }} {{ .HEAD }} ",
          "foreground": "#000000",
          "powerline_symbol": "\ue0b0",
          "background": "#f34f29",
          "type": "git",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " {{ reason .Code }} ",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "background": "#990000",
          "type": "status",
          "style": "powerline"
        }
      ]
    }
  ],
  "version": 3,
  "final_space": true
}
